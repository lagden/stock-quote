#!/bin/bash

DIR="$( cd -P "$( dirname "$0" )" && pwd )"

# Import functions
. $DIR/_fn

# Go to project root
cd $DIR
cd ..

CURR_FOLDER=`pwd`
OPT="development"
COMPOSE_TEMPLATE="${CURR_FOLDER}/docker-compose.template.yml"
COMPOSE_LOCAL="${CURR_FOLDER}/docker-compose.local.yml"

# ENV File
load_env $CURR_FOLDER $OPT

docker-compose \
	-f $COMPOSE_TEMPLATE \
	-f $COMPOSE_LOCAL \
	down \
	--volumes \
	--remove-orphans

test $? -ne 0 && abort "Docker Compose Failed" || ok "Stopped"

# docker rmi $(docker images -q -f "dangling=true" -f "label=autodelete=true")

exit 0
